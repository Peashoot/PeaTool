<Window x:Class="PeaTool.ShrinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeaTool"
        xmlns:utils="clr-namespace:PeaTool.Utils"
        mc:Ignorable="d"
        Title="ShrinkWindow" 
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False"
        d:DataContext="{d:DesignInstance Type=utils:SystemParameter}"
        Height="100" Width="100">
    <Border CornerRadius="8" BorderThickness="2" BorderBrush="#AFA99D" 
            Margin="80,0,0,0" Background="#AA000000">
        <Grid x:Name="ProgressGrid">
            <Grid.Clip>
                <RectangleGeometry RadiusX="6" RadiusY="6"  
                                   Rect="1,1,14,92" />
            </Grid.Clip>
        </Grid>
    </Border>
</Window>
